@model AccountEditViewModel
@{
    ViewData["Title"] = "Edit Account";
}


<form asp-controller="Account" asp-action="EditAccount" method="post">
    <h4>@ViewData["Title"]</h4>
    <hr />
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <input readonly asp-for="Id" type="text" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <input asp-for="FirstName" type="text" class="form-control" placeholder="First name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Change password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" placeholder="Confirm new password" />
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <input asp-for="Email" type="text" class="form-control" placeholder="Enter email" aria-describedby="emailHelp" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else ;)</small>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Phone number" aria-describedby="phoneHelp" />
                <small id="phoneHelp" class="form-text text-muted">Can only contain numbers, - and +</small>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="col">
            <div class="form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Current password" aria-describedby="passwordHelp" />
                <small id="passwordHelp" class="form-text text-muted">Confirm it's you</small>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" style="width:90px" />
            <a asp-controller="Account" asp-action="MyAccount" class="btn btn-danger" style="width:90px">Cancel</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>