@model TablesReservationViewModel
@{
    ViewData["Title"] = "Make a reservation";
}
<h1>@ViewData["Title"]</h1>
<ul>
    <li>TableId: @Model.TableId</li>
    <li>UserEmail: @Model.UserEmail</li>
    <li>Date: @Model.Date</li>
    <li>TimeFrom: @Model.TimeFrom</li>
    <li>TimeTo: @Model.TimeTo</li>
</ul>

<form asp-controller="Reserve" asp-action="Tables" method="post">
    <div class="form-horizontal">
        <h4>Make a reservation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <p>TableID: @Model.TableId</p>
        <p>UserEmail: @Model.UserEmail</p>

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @id = "datePickerReserveTable" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeFrom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeFrom, new { htmlAttributes = new { @class = "form-control", @step = "3600" } })
                @Html.ValidationMessageFor(model => model.TimeFrom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeTo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TimeTo, new { htmlAttributes = new { @class = "form-control", @step = "3600" } })
                @Html.ValidationMessageFor(model => model.TimeTo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reserve" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>