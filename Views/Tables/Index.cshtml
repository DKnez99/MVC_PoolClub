@model IEnumerable<Table>
@{
    ViewData["Title"] = "Tables";
}
<h1>@ViewData["Title"]</h1>

<div class="card-deck">
    @foreach (var table in Model)
    {
    <div class="card m-3" style="min-width:18rem; max-width:30.5%;">
        <img class="card-img-top" src="~/images/PoolTable.png" alt="Pool table picture"></img>
        <div class="card-body">
            <div class="card-title"><h3>Table @table.TableId</h3><hr /><h5>Floor @table.Floor</h5></div>
            <div class="text-center mt-1">
                <a asp-area="" asp-controller="Tables" asp-action="Reserve" asp-route-ID="@table.TableId" class="btn btn-primary m-1">Make a Reservation</a>
            </div>
        </div>
    </div>
    }
</div>